#include <iostream>
using namespace std;
void printOut(int n);
void printDigit(int n);
int main()
{
	int num;

	cout << "Enter a number";
	cin >> num;
	printOut(num);
	return 0;
}

void printDigit(int n)
{
	cout << n;
}

void printOut(int n)
{
	if (n>=10)
	{
		return printOut(n/10);

	}
	else
	{
		return printDigit(n);
	}
}
